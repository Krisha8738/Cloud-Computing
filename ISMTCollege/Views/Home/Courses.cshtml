@model List<ISMTCollege.Models.Course>
@{
    ViewData["Title"] = "Our Courses";
}

<!-- Hero Section -->
<div class="bg-primary text-white py-5 mb-5">
    <div class="container text-center">
        <h1 class="display-4 fw-bold">Our Academic Programs</h1>
        <p class="lead">Comprehensive courses designed for your academic and professional success</p>
    </div>
</div>

<!-- Course Categories -->
<div class="container mb-5">
    <div class="row text-center mb-5">
        <div class="col-12">
            <h2 class="display-5 fw-bold">Program Categories</h2>
            <p class="lead text-muted">Explore our diverse range of academic disciplines</p>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100 text-center">
                <div class="card-body p-4">
                    <i class="fas fa-laptop-code fa-3x text-primary mb-3"></i>
                    <h5 class="fw-bold">Computer Science</h5>
                    <p class="text-muted">Software development, AI, and computer systems</p>
                    <span class="badge bg-primary">Technology</span>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100 text-center">
                <div class="card-body p-4">
                    <i class="fas fa-chart-line fa-3x text-success mb-3"></i>
                    <h5 class="fw-bold">Business & Management</h5>
                    <p class="text-muted">Leadership, finance, and strategic management</p>
                    <span class="badge bg-success">Business</span>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100 text-center">
                <div class="card-body p-4">
                    <i class="fas fa-flask fa-3x text-warning mb-3"></i>
                    <h5 class="fw-bold">Engineering</h5>
                    <p class="text-muted">Civil, mechanical, and electrical engineering</p>
                    <span class="badge bg-warning">Engineering</span>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100 text-center">
                <div class="card-body p-4">
                    <i class="fas fa-heartbeat fa-3x text-danger mb-3"></i>
                    <h5 class="fw-bold">Health Sciences</h5>
                    <p class="text-muted">Nursing, public health, and medical technology</p>
                    <span class="badge bg-danger">Health</span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- All Courses Section -->
<div class="container mb-5">
    <div class="row text-center mb-5">
        <div class="col-12">
            <h2 class="display-5 fw-bold">All Available Courses</h2>
            <p class="lead text-muted">Browse through our comprehensive course catalog</p>
        </div>
    </div>
    
    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var course in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <i class="fas fa-book fa-2x text-primary me-3"></i>
                                <div>
                                    <h5 class="card-title mb-1">@course.Name</h5>
                                    <small class="text-muted">@course.Duration</small>
                                </div>
                            </div>
                            <p class="card-text">@course.Description</p>
                            @if (course.Fees.HasValue)
                            {
                                <p class="text-primary fw-bold mb-3">$@course.Fees.ToString("N0")</p>
                            }
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge bg-success">Active</span>
                                <a href="#" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-info-circle me-1"></i>Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <!-- Default course cards when no data -->
        <div class="row">
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-laptop-code fa-2x text-primary me-3"></i>
                            <div>
                                <h5 class="card-title mb-1">Bachelor of Computer Science</h5>
                                <small class="text-muted">4 Years</small>
                            </div>
                        </div>
                        <p class="card-text">Comprehensive program covering software development, algorithms, data structures, computer systems, and emerging technologies like artificial intelligence and machine learning.</p>
                        <p class="text-primary fw-bold mb-3">$12,000/year</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="badge bg-success">Active</span>
                            <a href="#" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-info-circle me-1"></i>Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-chart-line fa-2x text-success me-3"></i>
                            <div>
                                <h5 class="card-title mb-1">Bachelor of Business Administration</h5>
                                <small class="text-muted">4 Years</small>
                            </div>
                        </div>
                        <p class="card-text">Develop leadership skills and business acumen through courses in management, marketing, finance, economics, and strategic planning for the modern corporate world.</p>
                        <p class="text-primary fw-bold mb-3">$10,500/year</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="badge bg-success">Active</span>
                            <a href="#" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-info-circle me-1"></i>Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-flask fa-2x text-warning me-3"></i>
                            <div>
                                <h5 class="card-title mb-1">Bachelor of Engineering</h5>
                                <small class="text-muted">4 Years</small>
                            </div>
                        </div>
                        <p class="card-text">Innovative engineering programs in civil, mechanical, and electrical engineering, preparing students for technological challenges and innovation.</p>
                        <p class="text-primary fw-bold mb-3">$13,500/year</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="badge bg-success">Active</span>
                            <a href="#" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-info-circle me-1"></i>Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-heartbeat fa-2x text-danger me-3"></i>
                            <div>
                                <h5 class="card-title mb-1">Bachelor of Nursing</h5>
                                <small class="text-muted">4 Years</small>
                            </div>
                        </div>
                        <p class="card-text">Comprehensive nursing program combining theoretical knowledge with practical clinical experience to prepare compassionate healthcare professionals.</p>
                        <p class="text-primary fw-bold mb-3">$11,500/year</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="badge bg-success">Active</span>
                            <a href="#" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-info-circle me-1"></i>Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-palette fa-2x text-info me-3"></i>
                            <div>
                                <h5 class="card-title mb-1">Bachelor of Arts in Design</h5>
                                <small class="text-muted">4 Years</small>
                            </div>
                        </div>
                        <p class="card-text">Creative design program covering graphic design, web design, user experience, and digital media for the modern creative industry.</p>
                        <p class="text-primary fw-bold mb-3">$9,500/year</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="badge bg-success">Active</span>
                            <a href="#" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-info-circle me-1"></i>Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-graduation-cap fa-2x text-secondary me-3"></i>
                            <div>
                                <h5 class="card-title mb-1">Master of Education</h5>
                                <small class="text-muted">2 Years</small>
                            </div>
                        </div>
                        <p class="card-text">Advanced education program for teachers and educational leaders, focusing on curriculum development and educational leadership.</p>
                        <p class="text-primary fw-bold mb-3">$8,500/year</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="badge bg-success">Active</span>
                            <a href="#" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-info-circle me-1"></i>Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Course Features Section -->
<div class="container mb-5">
    <div class="row text-center mb-5">
        <div class="col-12">
            <h2 class="display-5 fw-bold">Why Choose Our Courses?</h2>
            <p class="lead text-muted">Discover the advantages of studying at ISMT College</p>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="text-center">
                <i class="fas fa-certificate fa-3x text-primary mb-3"></i>
                <h5 class="fw-bold">Accredited Programs</h5>
                <p class="text-muted">All our programs are nationally accredited and recognized by industry professionals.</p>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="text-center">
                <i class="fas fa-chalkboard-teacher fa-3x text-success mb-3"></i>
                <h5 class="fw-bold">Expert Faculty</h5>
                <p class="text-muted">Learn from experienced professionals and industry experts in their respective fields.</p>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="text-center">
                <i class="fas fa-briefcase fa-3x text-warning mb-3"></i>
                <h5 class="fw-bold">Career Support</h5>
                <p class="text-muted">Comprehensive career counseling and placement assistance for all students.</p>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="text-center">
                <i class="fas fa-globe fa-3x text-info mb-3"></i>
                <h5 class="fw-bold">Global Perspective</h5>
                <p class="text-muted">International partnerships and exchange programs for a global learning experience.</p>
            </div>
        </div>
    </div>
</div>

<!-- Call to Action -->
<div class="bg-light py-5 mb-5">
    <div class="container text-center">
        <h2 class="display-6 fw-bold mb-4">Ready to Enroll?</h2>
        <p class="lead mb-4">Take the first step towards your academic and professional success</p>
        <div class="d-flex justify-content-center gap-3 flex-wrap">
            <a href="@Url.Action("Contact", "Home")" class="btn btn-primary btn-lg px-4">
                <i class="fas fa-envelope me-2"></i>Contact Admissions
            </a>
            <a href="@Url.Action("About", "Home")" class="btn btn-outline-primary btn-lg px-4">
                <i class="fas fa-info-circle me-2"></i>Learn More
            </a>
        </div>
    </div>
</div>

<style>
.card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.15) !important;
}

.btn {
    transition: all 0.3s ease;
}

.btn:hover {
    transform: translateY(-2px);
}

.badge {
    font-size: 0.8rem;
}
</style>
