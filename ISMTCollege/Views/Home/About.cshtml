@{
    ViewData["Title"] = "About Us";
}

<!-- Hero Section -->
<div class="bg-primary text-white py-5 mb-5">
    <div class="container text-center">
        <h1 class="display-4 fw-bold">About ISMT College</h1>
        <p class="lead">Empowering Minds, Building Futures Since 1999</p>
    </div>
</div>

<!-- Mission & Vision Section -->
<div class="container mb-5">
    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center p-5">
                    <i class="fas fa-bullseye fa-3x text-primary mb-4"></i>
                    <h3 class="fw-bold mb-3">Our Mission</h3>
                    <p class="lead">To provide high-quality education that empowers students with knowledge, skills, and values necessary for personal and professional success in a global society.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center p-5">
                    <i class="fas fa-eye fa-3x text-success mb-4"></i>
                    <h3 class="fw-bold mb-3">Our Vision</h3>
                    <p class="lead">To be a leading institution of higher learning, recognized for academic excellence, innovation, and commitment to student success and community development.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- History Section -->
<div class="container mb-5">
    <div class="row align-items-center">
        <div class="col-lg-6 mb-4">
            <h2 class="display-5 fw-bold mb-4">Our History</h2>
            <p class="lead text-muted mb-4">Founded in 1999, ISMT College has been at the forefront of educational excellence for over two decades.</p>
            <div class="timeline">
                <div class="timeline-item mb-4">
                    <div class="d-flex">
                        <div class="timeline-marker bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                            <i class="fas fa-star"></i>
                        </div>
                        <div>
                            <h5 class="fw-bold">1999</h5>
                            <p class="mb-0">College founded with a vision to provide quality education</p>
                        </div>
                    </div>
                </div>
                <div class="timeline-item mb-4">
                    <div class="d-flex">
                        <div class="timeline-marker bg-success text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                            <i class="fas fa-graduation-cap"></i>
                        </div>
                        <div>
                            <h5 class="fw-bold">2005</h5>
                            <p class="mb-0">First batch of graduates successfully completed their programs</p>
                        </div>
                    </div>
                </div>
                <div class="timeline-item mb-4">
                    <div class="d-flex">
                        <div class="timeline-marker bg-warning text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                            <i class="fas fa-award"></i>
                        </div>
                        <div>
                            <h5 class="fw-bold">2010</h5>
                            <p class="mb-0">Received national accreditation for academic excellence</p>
                        </div>
                    </div>
                </div>
                <div class="timeline-item mb-4">
                    <div class="d-flex">
                        <div class="timeline-marker bg-info text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                            <i class="fas fa-globe"></i>
                        </div>
                        <div>
                            <h5 class="fw-bold">2015</h5>
                            <p class="mb-0">Expanded international partnerships and exchange programs</p>
                        </div>
                    </div>
                </div>
                <div class="timeline-item">
                    <div class="d-flex">
                        <div class="timeline-marker bg-danger text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                            <i class="fas fa-rocket"></i>
                        </div>
                        <div>
                            <h5 class="fw-bold">2024</h5>
                            <p class="mb-0">Celebrating 25 years of educational excellence and innovation</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6 mb-4">
            <img src="https://images.unsplash.com/photo-1523050854058-8df90110c9a1?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1000&q=80" 
                 alt="College Campus" class="img-fluid rounded shadow">
        </div>
    </div>
</div>

<!-- Values Section -->
<div class="container mb-5">
    <div class="row text-center mb-5">
        <div class="col-12">
            <h2 class="display-5 fw-bold">Our Core Values</h2>
            <p class="lead text-muted">The principles that guide everything we do</p>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100 text-center">
                <div class="card-body p-4">
                    <i class="fas fa-lightbulb fa-3x text-warning mb-3"></i>
                    <h5 class="fw-bold">Innovation</h5>
                    <p class="text-muted">Fostering creativity and embracing new ideas in education and research.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100 text-center">
                <div class="card-body p-4">
                    <i class="fas fa-handshake fa-3x text-primary mb-3"></i>
                    <h5 class="fw-bold">Integrity</h5>
                    <p class="text-muted">Maintaining the highest standards of honesty, ethics, and academic integrity.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100 text-center">
                <div class="card-body p-4">
                    <i class="fas fa-users fa-3x text-success mb-3"></i>
                    <h5 class="fw-bold">Diversity</h5>
                    <p class="text-muted">Celebrating and embracing diversity in all its forms within our community.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100 text-center">
                <div class="card-body p-4">
                    <i class="fas fa-heart fa-3x text-danger mb-3"></i>
                    <h5 class="fw-bold">Excellence</h5>
                    <p class="text-muted">Striving for the highest quality in all aspects of education and service.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Facilities Section -->
<div class="container mb-5">
    <div class="row text-center mb-5">
        <div class="col-12">
            <h2 class="display-5 fw-bold">World-Class Facilities</h2>
            <p class="lead text-muted">State-of-the-art infrastructure to support your learning journey</p>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center p-4">
                    <i class="fas fa-laptop fa-3x text-primary mb-3"></i>
                    <h5 class="fw-bold">Modern Computer Labs</h5>
                    <p class="text-muted">Fully equipped computer laboratories with the latest software and hardware.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center p-4">
                    <i class="fas fa-flask fa-3x text-success mb-3"></i>
                    <h5 class="fw-bold">Science Laboratories</h5>
                    <p class="text-muted">Advanced research and teaching laboratories for practical learning.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center p-4">
                    <i class="fas fa-book fa-3x text-warning mb-3"></i>
                    <h5 class="fw-bold">Library & Study Centers</h5>
                    <p class="text-muted">Extensive collection of books, journals, and digital resources.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center p-4">
                    <i class="fas fa-dumbbell fa-3x text-info mb-3"></i>
                    <h5 class="fw-bold">Sports & Recreation</h5>
                    <p class="text-muted">Modern sports facilities and recreational areas for student wellness.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center p-4">
                    <i class="fas fa-utensils fa-3x text-danger mb-3"></i>
                    <h5 class="fw-bold">Cafeteria & Dining</h5>
                    <p class="text-muted">Healthy and diverse food options in our modern dining facilities.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center p-4">
                    <i class="fas fa-wifi fa-3x text-secondary mb-3"></i>
                    <h5 class="fw-bold">Wi-Fi Campus</h5>
                    <p class="text-muted">High-speed internet connectivity throughout the campus.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Call to Action -->
<div class="bg-light py-5 mb-5">
    <div class="container text-center">
        <h2 class="display-6 fw-bold mb-4">Join Our Community</h2>
        <p class="lead mb-4">Be part of a vibrant learning community that values your growth and success</p>
        <div class="d-flex justify-content-center gap-3 flex-wrap">
            <a href="@Url.Action("Contact", "Home")" class="btn btn-primary btn-lg px-4">
                <i class="fas fa-envelope me-2"></i>Get in Touch
            </a>
            <a href="@Url.Action("Courses", "Home")" class="btn btn-outline-primary btn-lg px-4">
                <i class="fas fa-book me-2"></i>Explore Programs
            </a>
        </div>
    </div>
</div>

<style>
.timeline-marker {
    flex-shrink: 0;
}

.card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.15) !important;
}

.btn {
    transition: all 0.3s ease;
}

.btn:hover {
    transform: translateY(-2px);
}
</style>
