    {
        <div class="row">
            @foreach (var faculty in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="mb-3">
                                @if (!string.IsNullOrEmpty(faculty.ProfileImage))
                                {
                                    <img src="@faculty.ProfileImage" alt="@faculty.Name" class="rounded-circle mb-3" style="width: 120px; height: 120px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 120px; height: 120px;">
                                        <i class="fas fa-user fa-3x"></i>
                                    </div>
                                }
                            </div>
                            <h5 class="card-title fw-bold mb-2">@faculty.Name</h5>
                            <p class="text-primary fw-bold mb-2">@faculty.Designation</p>
                            <p class="text-muted mb-3">@faculty.Department</p>
                            @if (!string.IsNullOrEmpty(faculty.Email))
                            {
                                <p class="mb-2">
                                    <i class="fas fa-envelope me-2 text-muted"></i>
                                    <a href="mailto:@faculty.Email" class="text-decoration-none">@faculty.Email</a>
                                </p>
                            }
                            @if (!string.IsNullOrEmpty(faculty.Phone))
                            {
                                <p class="mb-3">
                                    <i class="fas fa-phone me-2 text-muted"></i>
                                    <a href="tel:@faculty.Phone" class="text-decoration-none">@faculty.Phone</a>
                                </p>
                            }
                            <span class="badge bg-success">Active</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
