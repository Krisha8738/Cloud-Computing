@model List<ISMTCollege.Models.Faculty>
@{
    ViewData["Title"] = "Our Faculty";
}

<!-- Hero Section -->
<div class="bg-primary text-white py-5 mb-5">
    <div class="container text-center">
        <h1 class="display-4 fw-bold">Meet Our Faculty</h1>
        <p class="lead">Experienced educators and industry professionals dedicated to your success</p>
    </div>
</div>

<!-- Faculty Overview -->
<div class="container mb-5">
    <div class="row text-center">
        <div class="col-12">
            <h2 class="display-5 fw-bold mb-4">Academic Excellence</h2>
            <p class="lead text-muted">Our faculty members bring years of experience, research expertise, and industry knowledge to create an exceptional learning environment.</p>
        </div>
    </div>
</div>

<!-- Faculty Members -->
<div class="container mb-5">
