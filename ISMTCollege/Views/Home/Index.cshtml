@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<div class="hero-section text-white text-center py-5 mb-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="container">
        <div class="row align-items-center min-vh-75">
            <div class="col-lg-8 mx-auto">
                <h1 class="display-3 fw-bold mb-4">Welcome to ISMT College</h1>
                <p class="lead mb-4">Empowering Minds, Building Futures</p>
                <p class="mb-5">Discover excellence in education with our comprehensive programs, experienced faculty, and state-of-the-art facilities.</p>
                <div class="d-flex justify-content-center gap-3 flex-wrap">
                    <a href="@Url.Action("Courses", "Home")" class="btn btn-light btn-lg px-4">
                        <i class="fas fa-book me-2"></i>Explore Courses
                    </a>
                    <a href="@Url.Action("Contact", "Home")" class="btn btn-outline-light btn-lg px-4">
                        <i class="fas fa-envelope me-2"></i>Get in Touch
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Stats Section -->
<div class="container mb-5">
    <div class="row text-center">
        <div class="col-md-3 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <i class="fas fa-users fa-3x text-primary mb-3"></i>
                    <h3 class="fw-bold text-primary">@ViewBag.FacultyCount+</h3>
                    <p class="text-muted mb-0">Expert Faculty</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <i class="fas fa-graduation-cap fa-3x text-success mb-3"></i>
                    <h3 class="fw-bold text-success">@ViewBag.CourseCount+</h3>
                    <p class="text-muted mb-0">Courses Offered</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <i class="fas fa-award fa-3x text-warning mb-3"></i>
                    <h3 class="fw-bold text-warning">25+</h3>
                    <p class="text-muted mb-0">Years of Excellence</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <i class="fas fa-globe fa-3x text-info mb-3"></i>
                    <h3 class="fw-bold text-info">50+</h3>
                    <p class="text-muted mb-0">Countries Represented</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Featured Courses Section -->
<div class="container mb-5">
    <div class="row">
        <div class="col-12 text-center mb-5">
            <h2 class="display-5 fw-bold">Featured Courses</h2>
            <p class="lead text-muted">Explore our most popular programs designed for your success</p>
        </div>
    </div>
    <div class="row">
        @if (ViewBag.FeaturedCourses != null)
        {
            foreach (var course in ViewBag.FeaturedCourses)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <i class="fas fa-book fa-2x text-primary me-3"></i>
                                <div>
                                    <h5 class="card-title mb-1">@course.Name</h5>
                                    <small class="text-muted">@course.Duration</small>
                                </div>
                            </div>
                            <p class="card-text">@course.Description</p>
                            @if (course.Fees.HasValue)
                            {
                                <p class="text-primary fw-bold mb-3">$@course.Fees.ToString("N0")</p>
                            }
                            <a href="@Url.Action("Courses", "Home")" class="btn btn-outline-primary">
                                Learn More <i class="fas fa-arrow-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <!-- Default course cards when no data -->
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-laptop-code fa-2x text-primary me-3"></i>
                            <div>
                                <h5 class="card-title mb-1">Computer Science</h5>
                                <small class="text-muted">4 Years</small>
                            </div>
                        </div>
                        <p class="card-text">Comprehensive program covering software development, algorithms, and computer systems.</p>
                        <p class="text-primary fw-bold mb-3">$12,000/year</p>
                        <a href="@Url.Action("Courses", "Home")" class="btn btn-outline-primary">
                            Learn More <i class="fas fa-arrow-right ms-1"></i>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-chart-line fa-2x text-success me-3"></i>
                            <div>
                                <h5 class="card-title mb-1">Business Administration</h5>
                                <small class="text-muted">4 Years</small>
                            </div>
                        </div>
                        <p class="card-text">Develop leadership skills and business acumen for the modern corporate world.</p>
                        <p class="text-primary fw-bold mb-3">$10,500/year</p>
                        <a href="@Url.Action("Courses", "Home")" class="btn btn-outline-primary">
                            Learn More <i class="fas fa-arrow-right ms-1"></i>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-flask fa-2x text-warning me-3"></i>
                            <div>
                                <h5 class="card-title mb-1">Engineering</h5>
                                <small class="text-muted">4 Years</small>
                            </div>
                        </div>
                        <p class="card-text">Innovative engineering programs preparing students for technological challenges.</p>
                        <p class="text-primary fw-bold mb-3">$13,500/year</p>
                        <a href="@Url.Action("Courses", "Home")" class="btn btn-outline-primary">
                            Learn More <i class="fas fa-arrow-right ms-1"></i>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="text-center mt-4">
        <a href="@Url.Action("Courses", "Home")" class="btn btn-primary btn-lg">
            View All Courses <i class="fas fa-arrow-right ms-2"></i>
        </a>
    </div>
</div>

<!-- Latest News Section -->
<div class="container mb-5">
    <div class="row">
        <div class="col-12 text-center mb-5">
            <h2 class="display-5 fw-bold">Latest News & Updates</h2>
            <p class="lead text-muted">Stay informed about campus events, achievements, and announcements</p>
        </div>
    </div>
    <div class="row">
        @if (ViewBag.LatestNews != null)
        {
            foreach (var news in ViewBag.LatestNews)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <i class="fas fa-newspaper fa-2x text-info me-3"></i>
                                <div>
                                    <h5 class="card-title mb-1">@news.Title</h5>
                                    <small class="text-muted">@news.PublishedAt.ToString("MMM dd, yyyy")</small>
                                </div>
                            </div>
                            <p class="card-text">@(news.Content.Length > 100 ? news.Content.Substring(0, 100) + "..." : news.Content)</p>
                            <a href="@Url.Action("News", "Home")" class="btn btn-outline-info">
                                Read More <i class="fas fa-arrow-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <!-- Default news cards when no data -->
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-trophy fa-2x text-warning me-3"></i>
                            <div>
                                <h5 class="card-title mb-1">Student Achievement Award</h5>
                                <small class="text-muted">Dec 15, 2024</small>
                            </div>
                        </div>
                        <p class="card-text">Congratulations to our students who won the regional science competition...</p>
                        <a href="@Url.Action("News", "Home")" class="btn btn-outline-info">
                            Read More <i class="fas fa-arrow-right ms-1"></i>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-calendar-alt fa-2x text-success me-3"></i>
                            <div>
                                <h5 class="card-title mb-1">Spring Semester Registration</h5>
                                <small class="text-muted">Dec 10, 2024</small>
                            </div>
                        </div>
                        <p class="card-text">Spring semester registration is now open. Early registration deadline is...</p>
                        <a href="@Url.Action("News", "Home")" class="btn btn-outline-info">
                            Read More <i class="fas fa-arrow-right ms-1"></i>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-microscope fa-2x text-primary me-3"></i>
                            <div>
                                <h5 class="card-title mb-1">New Research Lab Opening</h5>
                                <small class="text-muted">Dec 05, 2024</small>
                            </div>
                        </div>
                        <p class="card-text">Our new state-of-the-art research laboratory is now open for students...</p>
                        <a href="@Url.Action("News", "Home")" class="btn btn-outline-info">
                            Read More <i class="fas fa-arrow-right ms-1"></i>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="text-center mt-4">
        <a href="@Url.Action("News", "Home")" class="btn btn-info btn-lg">
            View All News <i class="fas fa-arrow-right ms-2"></i>
        </a>
    </div>
</div>

<!-- Call to Action Section -->
<div class="bg-primary text-white py-5 mb-5">
    <div class="container text-center">
        <h2 class="display-6 fw-bold mb-4">Ready to Start Your Journey?</h2>
        <p class="lead mb-4">Join thousands of students who have chosen ISMT College for their education</p>
        <div class="d-flex justify-content-center gap-3 flex-wrap">
            <a href="@Url.Action("Contact", "Home")" class="btn btn-light btn-lg px-4">
                <i class="fas fa-phone me-2"></i>Contact Admissions
            </a>
            <a href="@Url.Action("Courses", "Home")" class="btn btn-outline-light btn-lg px-4">
                <i class="fas fa-info-circle me-2"></i>Learn More
            </a>
        </div>
    </div>
</div>

<style>
.hero-section {
    position: relative;
    overflow: hidden;
}

.min-vh-75 {
    min-height: 75vh;
}

.card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.15) !important;
}

.btn {
    transition: all 0.3s ease;
}

.btn:hover {
    transform: translateY(-2px);
}
</style>
